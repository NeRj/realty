<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.nerj.oop.realty.model.User">
        <id name="id" column="user_id">
            <generator class="increment" />
        </id>
        <property name="username" column="username" />
        <property name="password" column="password" />
        <property name="name" column="name" />

        <joined-subclass name="com.nerj.oop.realty.model.Employee">
            <key column="user_id" />
            <property name="position" column="position" />
        </joined-subclass>

        <joined-subclass name="com.nerj.oop.realty.model.Customer">
            <key column="user_id" />
            <property name="phone" column="phone" />
            <property name="type" column="type" />
            <property name="additionalInfo" column="additional_info" />

            <joined-subclass name="com.nerj.oop.realty.model.NaturalPerson">
                <key column="user_id" />
                <property name="passport" column="passport" />
                <property name="birthDate" column="birth_date" />
            </joined-subclass>

            <joined-subclass name="com.nerj.oop.realty.model.CorporatePersonhood">
                <key column="user_id" />
                <property name="organization" column="organization" />
                <property name="foundationDate" column="foundation_date" />
                <property name="corporateAddress" column="corporate_address" />
            </joined-subclass>
        </joined-subclass>

    </class>
</hibernate-mapping>